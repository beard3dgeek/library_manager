extends ../layout

block content
	h1= title
	include searchForm
	p
		a(class="button", href="/books/new") Create New Book
	table
		thead
			tr
				th Title
				th Author
				th Genre
				th Year
		tbody
			each book in books
				tr
					td 
						a(href="/books/" + book.id)= book.title
					td= book.author
					td= book.genre
					td= book.year
	//- a(id="previous-button" class="button", href="/books/page/1") Previous
	//- a(id="next-button" class="button", href="/books/page/2") Next
	- var pageNo = 1;
	while pageNo <= noOfPages
		a(class="button pagination", href="/books/page/" + pageNo)= pageNo++